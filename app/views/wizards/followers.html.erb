<div class="container-fluid mt-5">
  <div class="card-hogwarts p-4 w-100" style="max-width: 900px; margin: 0 auto;">
    <h2 class="text-center mb-4">Followers of <%= @wizard.name %></h2>
    <table class="table table-striped table-dark w-100">
      <thead>
        <tr>
          <th>Photo</th>
          <th>Name</th>
          <th>House</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @followers.each do |wizard| %>
          <tr>
            <td>
              <% if wizard.avatar.attached? %>
                <%= image_tag wizard.avatar.variant(resize_to_fill: [48,48]), class: "rounded-circle border border-warning", alt: wizard.name %>
              <% else %>
                <%= image_tag "/icon.png", width: 48, height: 48, class: "rounded-circle border border-secondary", alt: wizard.name %>
              <% end %>
            </td>
            <td><%= wizard.name %></td>
            <td><%= wizard.hogwarts_house %></td>
            <td>
              <div class="d-flex gap-2 align-items-center">
                <%= link_to "View", wizard_path(wizard), class: "btn btn-hogwarts btn-sm w-100", style: "min-width:100px; min-height:38px;" %>
                <% if current_wizard.following.include?(wizard) %>
                  <%= button_to "Unfollow", unfollow_wizard_path(wizard), method: :post, class: "btn btn-danger btn-sm w-100", style: "min-width:100px; min-height:38px;" %>
                <% elsif wizard.following.include?(current_wizard) %>
                  <%= button_to "Follow Back", follow_wizard_path(wizard), method: :post, class: "btn btn-warning btn-sm w-100", style: "min-width:100px; min-height:38px;" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </div>
</div>
