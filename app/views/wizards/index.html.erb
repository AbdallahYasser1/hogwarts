<div class="container mt-5">
  <div class="card-hogwarts p-4">
    <h2 class="text-center mb-4">All Wizards</h2>
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Date of Birth</th>
          <th>Profile</th>
        </tr>
      </thead>
      <tbody>
        <% @wizards.each do |wizard| %>
          <tr>
            <td><%= wizard.name %></td>
            <td><%= wizard.email %></td>
            <td><%= wizard.date_of_birth %></td>
            <td><%= link_to "View", wizard_path(wizard), class: "btn btn-hogwarts btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @wizards %>
    </div>
  </div>
</div>
