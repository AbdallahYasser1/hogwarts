<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg border-0 bg-dark text-light hogwarts-card">
        <div class="card-body">
          <h2 class="text-center text-warning mb-4" style="font-family: 'Cinzel', serif;">Change Password</h2>
          <%= form_with model: @wizard, url: wizard_path(@wizard), method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :password, "New Password", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", required: true, autocomplete: "new-password" %>
            </div>
            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "new-password" %>
            </div>
            <div class="d-grid">
              <%= f.submit "Change Password", class: "btn btn-hogwarts btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .hogwarts-card {
    border-radius: 1rem;
    box-shadow: 0 2px 12px #8e44ad;
  }
</style>
