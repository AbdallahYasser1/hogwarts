<div class="card-hogwarts">
  <h1 class="text-center mb-4">Reset Password</h1>
  <%= form_with url: reset_password_path, method: :patch, local: true do |f| %>
    <%= hidden_field_tag :token, params[:token] %>
    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
        <%= f.password_field :password, class: "form-control", required: true, placeholder: "New password" %>
      </div>
    </div>
    <div class="d-grid">
      <%= f.submit "Reset Password", class: "btn btn-hogwarts btn-lg" %>
    </div>
  <% end %>
</div>
