<div class="card-hogwarts">
  <h1 class="text-center mb-4">Wizard Login</h1>
  <%= form_with url: login_path, html: { class: "needs-validation" } do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
        <%= f.email_field :email, class: "form-control", required: true, placeholder: "wizard@hogwarts.com" %>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
        <%= f.password_field :password, class: "form-control", required: true, placeholder: "Your password" %>
      </div>
    </div>

      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
      </div>

    <div class="d-grid">
      <%= f.submit "Login", class: "btn btn-hogwarts btn-lg" %>
    </div>
      <div class="mt-3 text-center">
        <%= link_to "Forgot password?", forgot_password_path, class: "link-warning" %>
      </div>
  <% end %>
</div>
