
<div class="card-hogwarts">
  <h1 class="text-center mb-4">Forgot Password</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder: "wizard@hogwarts.com" %>
      </div>
    </div>
    <div class="d-grid">
      <%= f.submit "Send Reset Instructions", class: "btn btn-hogwarts btn-lg" %>
    </div>
    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
