@import "bootstrap";
@import "bootstrap-icons/font/bootstrap-icons.css";

/* Hogwarts custom styles */
body {
  background: linear-gradient(135deg, #2c3e50 0%, #8e44ad 100%);
  color: #fff;
  font-family: 'Segoe UI', 'Roboto', 'Arial', sans-serif;
}

.card-hogwarts {
  background: rgba(44, 62, 80, 0.95);
  border-radius: 1rem;
  box-shadow: 0 0 24px 0 #8e44ad;
  padding: 2rem;
  margin: 2rem auto;
  max-width: 500px;
}

.btn-hogwarts {
  background: #8e44ad;
  color: #fff;
  border: none;
  border-radius: 0.5rem;
  padding: 0.5rem 1.5rem;
  font-weight: bold;
  transition: background 0.2s;
}
.btn-hogwarts:hover {
  background: #6c3483;
}

.form-label {
  color: #f7ca18;
  font-weight: bold;
}

.form-control {
  background: #fff;
  color: #2c3e50;
  border-radius: 2rem;
  box-shadow: 0 0 4px #8e44ad33;
}
.input-group-text {
  background: #8e44ad;
  color: #fff;
  border: none;
}
